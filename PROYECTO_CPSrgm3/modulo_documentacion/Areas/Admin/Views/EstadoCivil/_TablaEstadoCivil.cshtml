@using Commons.Models;
@model Page<modulo_documentacion.Areas.Admin.Models.Basicas.EstadoCivil>
<box-header title="Lista de Datos">
    <box-search update-div="TablaEstadoCivil">
        <div class="input-group input-group-sm pull-right" style="max-width: 300px;">
            <a onclick="NuevoEstadoCivil()" class="btn btn-info btn-sm">
                <i class="fa fa-plus"><span class="hidden-xs"> Nuevo</span></i>
            </a>
        </div>
    </box-search>
</box-header>
<box-body table="true">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Descripción
                </th>
                <th>
                    Editar/Eliminar
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items.OrderBy(x => x.Descripcion))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a onclick="editaEstadoCivil(@item.Id)" title="Editar" class="btn btn-primary btn-xs"><i class="fa fa-file-text-o"></i></a>
                        <!--<a onclick="Eliminar('@item.Id')" title="Eliminar" class="btn btn-info btn-xs btn-danger"><i class="fa fa-trash"></i></a>-->
                        <a asp-action="Delete"
                           asp-route-id="@item.Id"
                           title="Eliminar"
                           confirm=""
                           confirm-icon="Danger"
                           class="btn btn-danger btn-xs">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</box-body>
<box-footer page-update-div="TablaEstadoCivil"></box-footer>
<modal title="Edicion de Estado Civil" function="editaEstadoCivil" load-url="/Admin/EstadoCivil/_Edit/" size="Medium"></modal>
<modal title="Nuevo Estado Civil" function="NuevoEstadoCivil" load-url="/Admin/EstadoCivil/_Create/" size="Medium"></modal>
