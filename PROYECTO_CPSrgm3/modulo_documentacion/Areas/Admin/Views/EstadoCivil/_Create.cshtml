@model modulo_documentacion.Areas.Admin.Models.Basicas.EstadoCivil

<form class="form-horizontal" method="post" asp-action="_Create" asp-controller="EstadoCivil">
    <div class="box-body">

        <div class="form-group">
            <label for="Descripcion" class="col-sm-2 control-label">Descripcion</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Descripcion" placeholder="Descripcion">
            </div>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
        <button type="submit" class="btn btn-info pull-right">Agregar</button>
    </div>
    <!-- /.box-footer -->
</form>