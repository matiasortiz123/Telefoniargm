@model modulo_documentacion.Areas.Admin.Models.Basicas.Marca

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br />
            <p>¿Esta seguro que desea eliminar la marca?</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <form method="post" asp-controller="Marca" asp-action="_DeleteMarcas">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger ml-1">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </form>
        </div>
    </div>
    <br />
</div>

