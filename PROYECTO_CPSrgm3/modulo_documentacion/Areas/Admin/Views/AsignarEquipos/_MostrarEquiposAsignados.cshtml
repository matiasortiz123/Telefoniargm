<script>
    $(document).ready(function () {
        $('#listadoCentroJurisdiccional').DataTable({
            "columnDefs": [{
                "searchable": false,
                "orderable": false,
                //"targets": 3
            }],
            "language": {
                'url': '@Url.Content("~/lib/arg.json")'
            }
        });

    });

</script>