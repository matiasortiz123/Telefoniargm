    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <d>
                <center>¿ESTA SEGURO DE ELIMINAR?</center>
