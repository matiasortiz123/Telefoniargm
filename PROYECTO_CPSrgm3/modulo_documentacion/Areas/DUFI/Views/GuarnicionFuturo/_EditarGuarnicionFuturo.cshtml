@model modulo_documentacion.Areas.DUFI.Models.GuarnicionFuturo

    <form class="form-horizontal" method="post" asp-action="_EditarGuarnicionFuturo" asp-controller="GuarnicionFuturo">
        <div class="panel-body">
            <div class="form-group" align="center">
                <span class="label label-danger" style="font-size:12px;" center>En caso de ser cambiado, mencione por prioridad, <br /> tres Guarniciones (una desfavorable) en donde se sentiria mejor.</span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label>Primera Prioridad</label>
                        <select asp-items="@ViewBag.Guarniciones" asp-for="DeseaGuarnicion1" class="form-control seleccion">
                            <option selected hidden value="">Seleccione</option>
                        </select>
                        <span asp-validation-for="DeseaGuarnicion1" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label>Segunda Prioridad</label>
                        <select asp-items="@ViewBag.Guarniciones" asp-for="DeseaGuarnicion2">
                            <option selected hidden value="">Seleccione</option>
                        </select>
                        <span asp-validation-for="DeseaGuarnicion2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label>Tercera Prioridad</label>
                        <select asp-items="@ViewBag.Guarniciones" asp-for="DeseaGuarnicion3" class="form-control seleccion">
                            <option selected hidden value="">Seleccione</option>
                        </select>
                        <span asp-validation-for="DeseaGuarnicion3" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!----------------------------------- -->
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label>En caso de no ingresar a la 1ra Guarnición mi deseo es </label>
                        <select asp-items="@ViewBag.EnCaso" asp-for="PermanecerGuarnicion" class="form-control seleccion">
                            <option selected hidden value="">Seleccione</option>
                        </select>
                        <span asp-validation-for="PermanecerGuarnicion" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label>Última Guarnición en Zona I en que prestó servicios</label>
                        <select asp-items="@ViewBag.Guarniciones" asp-for="UltimaZona" class="form-control seleccion">
                            <option selected hidden value="">Seleccione</option>
                        </select>
                        <span asp-validation-for="UltimaZona" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" name="DufiId" value="@ViewBag.DufiId" />
            <div class="box-footer">
                <a asp-action="Index/@ViewBag.DufiId" class="btn btn-danger">Cancelar</a>
                <button type="submit" class="btn btn-info pull-right">Agregar</button>
            </div>
        </div>
    </form>

