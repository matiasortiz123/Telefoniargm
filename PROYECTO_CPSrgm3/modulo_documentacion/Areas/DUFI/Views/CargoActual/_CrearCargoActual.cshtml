@model modulo_documentacion.Areas.DUFI.Models.CargoActual


<form class="form-horizontal" method="post" asp-action="_CrearCargoActual" asp-controller="CargoActual">
    <div class="panel-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label>Tiempo Guarnición</label>
                    <input asp-for="TiempoGuarnicion" value="0" class="form-control" />
                    <span asp-validation-for="TiempoGuarnicion" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label>Tiempo Destino</label>
                    <input asp-for="TiempoDestino" value="0" class="form-control" />
                    <span asp-validation-for="TiempoDestino" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label>Tiempo Cargo</label>
                    <input asp-for="TiempoCargo" value="0" class="form-control" />
                    <span asp-validation-for="TiempoCargo" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label>Cargo Ocupa</label>
                    <input asp-for="CargoOcupa" class="form-control" />
                    <span asp-validation-for="CargoOcupa" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label>Cargo Deseado</label>
                    <input asp-for="CargoDeseado" class="form-control" />
                    <span asp-validation-for="CargoDeseado" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="hidden" name="DufiId" value="@ViewBag.DufiId" />
        <div class="box-footer">
            <a asp-action="Index/@ViewBag.DufiId" class="btn btn-danger">Cancelar</a>
            <button type="submit" class="btn btn-info pull-right">Agregar</button>
        </div>
    </div>
</form>


