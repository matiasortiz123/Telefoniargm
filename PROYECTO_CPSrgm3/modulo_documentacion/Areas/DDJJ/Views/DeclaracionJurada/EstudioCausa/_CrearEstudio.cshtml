@model modulo_documentacion.Areas.DDJJ.Models.EstudioDDJJ

<form class="form-horizontal" method="post" asp-action="_CrearEstudio" asp-controller="DeclaracionJurada">
    <div class="form-group">
        <label for="EscolaridadId" class="col-sm-2 control-label">Tipo</label>
        <div class="col-sm-10">
            <select asp-items="@ViewBag.Escolaridad" id="EscolaridadID" name="EscolaridadId" class="form-control"></select>
        </div>
    </div>
    <div class="form-group" id="Descripcion" style="display:none">
        <label for="Descripcion" class="col-sm-2 control-label">Descripción</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Descripcion" placeholder="Describa el titulo alcanzado">
        </div>
    </div>
    <div class="form-group">
        <label for="PrefijoTel" class="col-sm-2 control-label">Finalizado</label>
        <div class="col-sm-2">
            @Html.CheckBoxFor(m => m.Finalizado)
        </div>
    </div>
    <input type="hidden" name="DeclaracionJuradaID" value="@ViewBag.DJId" />
    <div class="box-footer">
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
        <button type="submit" class="btn btn-info pull-right">Agregar</button>
    </div>
    <!-- /.box-footer -->
</form>

<script src="~/js/Documentacion.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        if ($('#EscolaridadID').val() <= 4) {
            $('#Descripcion').hide();
        } else {
            $('#Descripcion').show();
        }
    });

</script>