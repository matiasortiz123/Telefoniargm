@model modulo_documentacion.Areas.DDJJ.Models.DeclaracionJurada

    <form class="form-horizontal" method="post" asp-action="_EditarEstadoCivil" asp-controller="DeclaracionJurada">
        <div class="">
            <div class="dropdown form-group">
                <div class="col-sm-5">
                    <label for="EstadoCivil" class="control-label">Estado Civil</label>
                </div>
                <div class="col-sm-10 ">

                    <select asp-items="@ViewBag.EstadoCivil" asp-for="@Model.EstadoCivilID" name="EstadoCivilID" class="form-control"></select>
                </div>
            </div>
            <div class="dropdown form-group">
                <div class="col-sm-5">
                    <label for="SituacionFamiliar" class="control-label">Situacion Familiar</label>
                </div>
                <div class="col-sm-10">
                    <select asp-items="@ViewBag.SituacionFamiliar" asp-for="@Model.SituacionFamiliarID"  name="SituacionFamiliarID" class="form-control"></select>
                </div>
            </div>
            <div id="Fecha" style="display:none">
                <div class="form-group">
                    <div class="col-sm-5">
                        <label class="control-label">Fecha de Casamiento</label>
                    </div>
                    <div class="col-sm-10 ">
                        <input class="form-control" asp-for="@Model.FechaCasamiento" name="FechaCasamiento" type="date" />
                    </div>
                </div>
            </div>
            <div id="Otra" style="display:none">
                <div class="form-group  ">

                    <div class="col-sm-5">
                        <label for="OtraSituacion" class="control-label">Otras Situaciones</label>
                    </div>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.OtraSituacionFamiliar" name="OtraSituacion" placeholder="Otra situacion personal">
                    </div>
                </div>

            </div>
            <input type="hidden" name="DeclaracionJuradaID" value="@ViewBag.DJId" />
            <div class="box-footer">
                <a asp-action="Index" class="btn btn-default">Cancelar</a>
                <button type="submit" class="btn btn-info pull-right">Agregar</button>
            </div>
        </div>
            <!-- /.box-footer -->
</form>
<script src="~/js/Documentacion.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        let a = $('select[name="SituacionFamiliarID"]').val();
        if (a == 5) {
            $('#Otra').show();
        }
        else {
            $('#Otra').hide();
            $('#Otra').find('input').val('');
        }
        let b = $('select[name="EstadoCivilID"]').val();
        if (b == 2) {
            $('#Fecha').show();
            //$('#FechaCasamiento').show();
        }
        else {
            $('#Fecha').hide();
            $('#Fecha').val('');
        }
    });

