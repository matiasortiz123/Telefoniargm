@model modulo_documentacion.Areas.DDJJ.Models.ContactoDDJJ

<form class="form-horizontal" method="post" asp-action="_CrearContacto" asp-controller="DeclaracionJurada">
    <div class="dropdown form-group">
        <label for="TipoContactoId" class="col-sm-2 control-label">Tipo</label>
        <div class="col-sm-10">
            <select asp-items="@ViewBag.TipoContacto" name="TipoContactoId" class="form-control"></select>
        </div>
    </div>
    <div class="form-group" id="contacto" style="display:none">
        <label for="Email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Email" placeholder="Correo Electronico">
        </div>
    </div>
    <div class="form-group tel" id="tel">
        <label for="PrefijoTel" class="col-sm-2 control-label">Prefijo</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" name="PrefijoTel" placeholder="011">
        </div>
        <label for="NumeroTel" class="col-sm-2 control-label">Numero</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NumeroTel" placeholder="123456789">
        </div>
    </div>
    <input type="hidden" name="DeclaracionJuradaID" value="@ViewBag.DJId" />
    <div class="box-footer">
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
        <button type="submit" class="btn btn-info pull-right">Agregar</button>
    </div>
    <!-- /.box-footer -->
</form>
<script src="~/js/Documentacion.js"></script>

