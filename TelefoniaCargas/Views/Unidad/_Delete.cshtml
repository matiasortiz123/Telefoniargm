@model TelefoniaCargas.Models.Unidad
@{ ViewData["mensaje"] = "Eliminar"; }
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br />
            <p>¿Esta seguro que desea eliminar el equipo?</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <form method="post" asp-controller="Unidad" asp-action="_DeleteUnidad">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger ml-1">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </form>
        </div>
    </div>
    <br />
</div>

